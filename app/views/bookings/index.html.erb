<h1>Hello, <%= current_user.first_name %></h1>
<div>
  <ul>
    <% @bookings.each do |booking| %>
      <% if booking.character.user == current_user %>
        <li><%= "#{booking.character.name} - #{booking.user} - #{booking.character.price}$ || Accept | Decline" %></li>
      <% else %>
        <li><%= "#{booking.character.name} - #{booking.character.user} - #{booking.character.price}$ || Pending / Accepted / Declined" %></li>
      <% end %>
    <% end %>
  </ul>
</div>
