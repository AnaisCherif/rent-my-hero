<h1>Hello, <%= current_user.first_name %></h1>
<div class="container">
  <ul>
    <div class="container text-center">
    <h2>My Characters Bookings</h2>
    <% @my_bookings.each do |booking| %>
      <li>
      <% if booking.character.user == current_user %>
        <%= "#{booking.character.name} - #{booking.user.first_name} - #{booking.character.price}$ || #{booking.status}" %>
        <% if booking.status == nil %>
          <%= link_to "Accept", accept_path(booking),
            data: {turbo_method: :patch, turbo_confirm: "Are you sure?"} %>
          <%= link_to "Decline", decline_path(booking),
            data: {turbo_method: :patch, turbo_confirm: "Are you sure?"} %>
        <% end %>
      <% end %>
    <% end %>
        </li>
        </ul>
        <ul>
    </div>
    <div class="container text-center">
    <h2>My Bookings</h2>
    <% @bookings.each do |booking| %>
      <% if booking.user == current_user %>
        <li><%= "#{booking.character.name} - #{booking.character.user.first_name} - #{booking.character.price}$ || " %>
          <% if booking.status %>
            <%= "Accepted" %>
          <% elsif booking.status == nil %>
             <%= "Pending" %>
          <% else %>
           <%= "Declined" %></li>
          <% end %>
        <% end %>
      <% end %>
  </ul>
    </div>
</div>
