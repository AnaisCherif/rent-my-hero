<div class="container">

  <div class="row m-5">
    <div class="col">
      <%= link_to "Back to list", characters_path, class: "btn btn-ghost mb-3" %>

      <h1><%= @character.name  %></h1>
      <p>from <%= @character.from %></p>

      <div class="d-flex">
        <% if @character.photo_url? == true %>
          <%= image_tag @character.photo_url, alt: "text" %>
        <% else %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" alt="<%= @character[:name] %>">
        <% end %>

        <div class="ms-3">
            <p><i class="fa-solid fa-location-dot"></i> <%= @character.location %></p>
            <p><i class="fa-solid fa-money-bill-wave"></i> <%= @character.price %> dollars / day</p>
            <p><i class="fa-solid fa-brain"></i> <%= @character.skills %></p>

          <% if @character.user == current_user %>
            <p><%= link_to "Edit your character", edit_character_path(@character), class: "btn btn-ghost" %></p>
          <% else %>
            <p><%= link_to "Book now", new_character_booking_path(@character), class: "btn btn-ghost" %></p>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
